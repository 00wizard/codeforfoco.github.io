
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block header
  header.row
    include author
    .col-xs-12
      h1.text-center= page.title
    .col-xs-12  
      p.author.text-center
        | #{ 'Written by ' }
        mixin author(page.metadata.author)

block content
  .row
    
    article.article.col-xs-12.col-md-8
      section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=contents.index.url) &laquo; Full blog
